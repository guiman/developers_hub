<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>"></script>
<div id="map" style="height: 580px;"></div>
<script>
  function initialize() {
    var mapOptions = {
      center: { lat: 50.9167536, lng: -1.4004929},
      zoom: 8,
      styles: [{"featureType":"administrative","elementType":"labels.text.fill","stylers":[{"color":"#444444"}]},{"featureType":"landscape","elementType":"all","stylers":[{"color":"#f2f2f2"}]},{"featureType":"poi","elementType":"all","stylers":[{"visibility":"off"}]},{"featureType":"road","elementType":"all","stylers":[{"saturation":-100},{"lightness":45}]},{"featureType":"road.highway","elementType":"all","stylers":[{"visibility":"simplified"}]},{"featureType":"road.arterial","elementType":"labels.icon","stylers":[{"visibility":"off"}]},{"featureType":"transit","elementType":"all","stylers":[{"visibility":"off"}]},{"featureType":"water","elementType":"all","stylers":[{"color":"#46bcec"},{"visibility":"on"}]}]
    };
    var map = new google.maps.Map(document.getElementById('map'),
        mapOptions);
    $(function() {
      $.get( "/map_data/<%= @language %>", function(data) {
      for(i = 0; i < data.length; i++) {
          var info = data[i];
          var content = 'Devs found: ' + info.language_count + '<br /><a target="_blank" href="/map/' + info.position[0] + '/' + info.position[1] + '/<%= @language %>">Listing</a>';
          var position = new google.maps.LatLng(info.position[0], info.position[1]);
          var infoWindow = new google.maps.InfoWindow({
            disableAutoPan : true
          });

          var marker = new google.maps.Circle({
            map: map,
            center: position,
            radius: data[i].language_count * 50,
            strokeColor: '#FF0000',
            strokeOpacity: 0.8,
            fillColor: '#f03',
            fillOpacity: 0.3
          });

          google.maps.event.addListener(marker,'click', (function(marker,content,infoWindow){
              return function(e) {
                  infoWindow.setContent(content);
                  infoWindow.setPosition(e.latLng);
                  infoWindow.open(map,marker);
              };
          })(marker,content,infoWindow));
        }
      });
    });
  }
  google.maps.event.addDomListener(window, 'load', initialize);

</script>


