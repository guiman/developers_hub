  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Developers Hub</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/lang/all">All Developers</a></li>
            <li><a href="/location/london">Developers in London</a></li>
            <li><a href="/lang/ruby">Ruby Developers</a></li>
            <li><a href="/lang/javascript">Javascript Developers</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user.logged_in? %>
              <% if current_user.is_a_developer? %>
                <li><%= link_to "Profile", developer_profile_path(current_user.secure_reference) %></li>
              <% end %>

              <li><%= link_to "Logout", "/sessions/logout" %></li>
            <% else %>
              <li><%= link_to "Recruiter SignIn Linkedin", "/auth/linkedin" %></li>
              <li><%= link_to "Developer SignIn Github", "/auth/github" %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

